<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.desktopapplication.Controller">
  <stylesheets>
    <URL value="@styles.css" />
  </stylesheets>
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <Label text="Welcome to Currency Converter" fx:id="welcomeText" />

  <Label text="From Currency" />
  <ComboBox fx:id="fromCurrencyComboBox" styleClass="custom-combo-box" />

  <Label text="To Currency" />
  <ComboBox fx:id="toCurrencyComboBox" styleClass="custom-combo-box" />

  <Label text="Amount" />
  <TextField fx:id="amountTextField" styleClass="custom-text-field" />

  <Button styleClass="my-button" text="Convert" onAction="#handleConvertButton" />
</VBox>
